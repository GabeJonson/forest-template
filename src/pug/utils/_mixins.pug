mixin imageContainer(image)
	.image-container.col-xs-12.col-sm-6.col-md-3.relative.text-center.row.middle-sm(style=`background-image: url(${imgPath}${image}.jpg)`)
		.text-container
			.h3.white-color Lorem ipsum
			p.white-color Lorem ipsum dolor sit amet, consectetur adipisicing elit
		.share-button
			a(href='#')
				i.fa.fa-share-alt
				span.text-uppercase.white-color share

